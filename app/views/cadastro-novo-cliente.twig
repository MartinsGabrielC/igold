{% extends 'include.twig' %}

{% block content %}
  <!--============== Formulário ==============-->

  <section class="Subscribe">
    <form method="post" action="{{ app.urlFor('sendNewCadastro') }}" id="form" data-parsley-validate>
      <div class="container">
        <div class="row">
          <h1 class="title text-center">Quero ser um novo cliente transponder.</h1>
        </div>
        <div class="row">
          <div class="col-lg-8 col-lg-push-2">
            <div class="text-center">
              <label for="pf" class="radio-inline">
                <input type="radio" id="pf" name="tipopessoa" value="pessoafisica" checked>
                Pessoa física
              </label>
              <label for="pj" class="radio-inline">
                <input type="radio" id="pj" name="tipopessoa" value="pessoajuridica">
                Pessoa jurídica
              </label>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-8 col-lg-push-2">
            <div class="form-group">
              <input type="text" name="nome" placeholder="Nome completo" class="form-control input-lg">
            </div>
            <div class="form-group">
              <input type="text" name="razao" placeholder="Razão social" class="form-control input-lg">
            </div>
            <div class="form-group" id="inputPessoa">
              <input type="text" name="cpf" id="cpf" placeholder="CPF" class="form-control input-lg" data-parsley-error-message="O campo CPF é obrigatório" required>
            </div>
            <div class="form-group" id="inputRg">
              <input type="text" name="rg" id="rg" placeholder="RG" class="form-control input-lg" data-parsley-error-message="O campo RG é obrigatório" required>
            </div>
            <div class="form-group">
              <input type="text" name="tel" placeholder="Telefone" class="form-control input-lg" data-parsley-error-message="O campo Telefone é obrigatório" required>
            </div>
            <div class="form-group">
              <input type="text" name="cel" placeholder="Celular" class="form-control input-lg">
            </div>
            <div class="form-group">
              <input type="email" name="email" placeholder="E-mail" class="form-control input-lg" data-parsley-error-message="O campo E-mail é obrigatório" required>
            </div>
            <div class="form-group">
              <input type="text" name="cep" placeholder="CEP" class="form-control input-lg" data-parsley-error-message="O campo CEP é obrigatório" required>
            </div>
            <div class="form-group">
              <input type="text" name="endereco" placeholder="Endereço" class="form-control input-lg" data-parsley-error-message="O campo Endereço é obrigatório" required>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-8 col-lg-push-2">
            <div class="row">
              <div class="col-lg-6">
                <div class="form-group">
                  <input type="text" name="bairro" placeholder="Bairro" class="form-control input-lg" data-parsley-error-message="O campo Bairro é obrigatório" required>
                </div>
                <div class="form-group">
                  <input type="text" name="estado" placeholder="Estado" class="form-control input-lg" data-parsley-error-message="O campo Estado é obrigatório" required>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="form-group">
                  <input type="text" name="cidade" placeholder="Cidade" class="form-control input-lg" data-parsley-error-message="O campo Cidade é obrigatório" required>
                </div>
                <div class="form-group">
                  <input type="text" name="compl" placeholder="Complemento" class="form-control input-lg" data-parsley-error-message="O campo Complemento é obrigatório" required>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-8 col-lg-push-2">
            <div class="row">
              <div class="col-lg-12">
                  <p><a href="{{ app.urlFor('home') }}files/termo-de-adesao-novos-clientes.pdf" title="Quero ser um novo cliente transponder" target="_blank">Clique aqui</a> e baixe o formulário de adesão.</p>
                <label class="checkbox-inline">
                  <input type="checkbox" name="aceito" id="term">li e aceito os <a href="{{ app.urlFor('home') }}files/contrato.pdf" download="contrato.pdf">termos do contrato de serviço</a>
                </label>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-12">
                <button class="btn btn-lg btn-block btn-primary" id="submit" disabled>enviar</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>
  </section>

  <!--============== Newsletter ==============-->

  <section class="Newsletter">
    <div class="container">
      <div class="row">
        <h1 class="title text-center">Newsletter</h1>
        <h3 class="text-center">Fique informado sobre nossas novidades</h3>
        <form action="">
          <div class="form-group">
            <input type="text" name="newsletter" placeholder="Digite seu e-mail" class="form-control input-lg">
          </div>
          <div class="text-center">
            <button class="btn btn-lg btn-primary">Enviar</button>
          </div>
        </form>
      </div>
    </div>
  </section>

<!--============== Contato ==============-->

<section class="container Contact" id="contato">
  <div class="row PageHead">
    <div class="col-md-12">
      <h1 class="title text-center">Contato</h1>
    </div>
  </div>
  <div class="row">
